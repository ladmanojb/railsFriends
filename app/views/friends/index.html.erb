<% if user_signed_in? %>
<h1>Friends List</h1>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%=link_to friend.first_name + ' '+friend.last_name , friend %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>
        <%# if friend.user == current_user %>
          <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger btn-sm"%></td>
        <%# end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path %>
<% else %>
<h1>Hello Rails</h1>
This is my first rails web page
<% end %>
